<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Boxing_Trainer_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Boxing_Trainer_App"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="True"
    Shell.TabBarBackgroundColor="#8B0000"
    Padding="0"
    Title="Suntukan App by Aster"
    >
    
    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home_icon.png"
            ContentTemplate="{DataTemplate local:MainPage}" />

        <ShellContent
            Title="Routines"
            Icon="calendar_icon.png"
            ContentTemplate="{DataTemplate local:RoutinesPage}" />

        <ShellContent
            Title="Timer"
            Icon="stopwatch_icon.png"
            ContentTemplate="{DataTemplate local:TimerPage}" />
        
    </TabBar>
</Shell>
